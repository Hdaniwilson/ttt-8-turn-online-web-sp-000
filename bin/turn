#!/usr/bin/env ruby
require_relative '../lib/turn'
board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]
puts "Welcome to Tic Tac Toe!"
display_board(board)
def turn(board)
  puts "Please enter 1-9:"
  user_input= gets.strip
    index= input_to_index(user_input)
    if valid_move?(board, index)
      puts move(board, user_input, "X")
      display_board(board)
    else
      turn(board)
    end
  end
